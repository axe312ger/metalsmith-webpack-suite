{
  "name": "metalsmith-webpack-suite",
  "version": "0.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "build": "DEBUG=metalsmith*,server* npm run build:webpack && npm run build:metalsmith",
    "build:prod": "NODE_ENV=production npm run build",
    "build:metalsmith": "babel-node src/scripts/build-metalsmith.js",
    "build:webpack": "npm run clean:webpack && webpack",
    "clean": "npm run clean:metalsmith && npm run clean:webpack",
    "clean:metalsmith": "rimraf dist/site/*",
    "clean:webpack": "rimraf dist/assets/*",
    "dev": "npm run clean && DEBUG=metalsmith*,server* NODE_ENV=development nodemon --watch src/scripts --watch src/config --exec babel-node src/scripts/run-dev-server.js",
    "server": "DEBUG=server* nodemon --watch dist/site --watch src/config src/scripts/run-server.js",
    "deploy": "npm run test && npm run build:prod && gh-pages -d dist/site",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src test",
    "lint:css": "stylelint src/assets/css/**/*.css",
    "test": "npm run lint && npm run test:build-process",
    "test:build-process": "npm run build",
    "preversion": "npm test",
    "version": "npm run build && git add -f dist",
    "postversion": "git push && git push --tags",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "npm run lint",
    "prepush": "npm run test"
  },
  "repository": {
    "url": "https://github.com/axe312ger/metalsmith-webpack-suite.git",
    "type": "git"
  },
  "keywords": [
    "metalsmith",
    "webpack"
  ],
  "author": "Benedikt RÃ¶tsch <info@benedikt-roetsch.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axe312ger/metalsmith-webpack-suite/issues"
  },
  "homepage": "https://github.com/axe312ger/metalsmith-webpack-suite#readme",
  "files": [
    "src",
    "dist",
    "README.md",
    "CONTRIBUTING.md"
  ],
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-stage-0": "^6.16.0",
    "condition-circle": "^1.5.0",
    "css-loader": "^0.28.0",
    "cz-conventional-changelog": "^1.2.0",
    "debug": "^2.5.2",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "2.1.0",
    "gh-pages": "^0.12.0",
    "handlebars": "^4.0.6",
    "husky": "^0.13.3",
    "metalsmith": "^2.2.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-layouts": "^1.8.0",
    "metalsmith-markdownit": "^0.4.0",
    "metalsmith-watch": "^1.0.3",
    "nodemon": "^1.11.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^5.1.2",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.2.0-rc.0",
    "webpack-dev-middleware": "^1.10.1",
    "write-file-webpack-plugin": "^4.0.0"
  }
}
